    script.
      require([
      "esri/Map",
      "esri/views/MapView",
      "esri/Graphic",
      "esri/geometry/Point",
      "esri/symbols/SimpleMarkerSymbol",
      ], function(Map, MapView,
      Graphic, Point, SimpleMarkerSymbol
      ) {
      //- var events = fs.readFile('events.json', (err, data)=>{
